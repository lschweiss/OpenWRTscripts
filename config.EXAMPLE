####
##
##  OpenWRT initial setup config
##
####

# Set hostname or 'ask' to prompt for hostname
OPENWRT_HOSTNAME='ask'

# Install latest tailscale from https://gunanovo.github.io/openwrt-tailscale
INSTALL_TAILSCALE=true

# Wireguard
INSTALL_WIREGUARD=true
JOIN_WIREGUARD=true
WIREGUARD_PUBLIC_KEY=''
 
# Install MWAN3
INSTALL_MWAN3=true

# Install OpenSSH server
INSTALL_OPENSSH=true
# Allow root login
# Set to 'yes' to allow password or 'prohibit-password' for ssh key only
OPENSSH_ROOT_LOGIN='yes'

# Root SSH keys to be installed.
ROOT_SSH_KEYS="{key_type1} {key1} {key_name1}
{key_type2} {key2} {key_name2}"

# Set root password
#ROOT_SHADOW='root:$5$7...HASH_FROM_/etc/shadow...:20496:0:99999:7:::'

# Run attended sysupgrade when complete
ATTENDED_UPGRADE=true

# Additional Setup
#ADDITIONAL_SETUP='post_config.{my_config_name}.sh'

